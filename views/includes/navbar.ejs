<!-- âœ… NAVBAR -->
<nav class="navbar navbar-light bg-white border-bottom sticky-top shadow-sm">
  <div class="container">

    <!-- Logo -->
    <a class="navbar-brand fw-bold text-danger" href="/listings">
      <i class="fa-brands fa-airbnb"></i>
    </a>

    <!-- Search (Always Visible) -->
    <form class="d-flex mx-auto search-form"
          role="search"
          method="GET"
          action="/listings">

      <input type="search"
        name="search"
        class="form-control rounded-pill me-2"
        placeholder="Search by title or location"
        required>

      <button class="btn btn-outline-danger rounded-pill px-4"
        type="submit">
        <i class="fa-solid fa-magnifying-glass"></i>
      </button>
    </form>

    <!-- Menu Button -->
    <button class="btn btn-outline-dark rounded-pill"
      type="button"
      data-bs-toggle="offcanvas"
      data-bs-target="#sideMenu">
      <i class="fa-solid fa-bars"></i>
    </button>

  </div>
</nav>

<!-- âœ… SLIDE MENU (OFFCANVAS) -->
<div class="offcanvas offcanvas-end " tabindex="-1" id="sideMenu">
  <div class="offcanvas-header">
    <h5 class="offcanvas-title">Menu</h5>
    <button type="button" class="btn-close" data-bs-dismiss="offcanvas"></button>
  </div>

  <div class="offcanvas-body">

    <a href="/listings" class="d-block mb-3 text-decoration-none text-dark">
      Explore
    </a>

    <a href="/listings/new" class="d-block mb-3 text-decoration-none text-dark">
      Airbnb your home
    </a>

    <% if(!currUser){ %>
      <a href="/signup" class="d-block mb-3 text-decoration-none fw-bold text-dark">
        Signup
      </a>

      <a href="/login" class="d-block mb-3 text-decoration-none fw-bold text-dark">
        Login
      </a>
    <% } %>

    <% if(currUser){ %>
      <a href="/logout" class="d-block mb-3 text-decoration-none fw-bold text-dark">
        Logout
      </a>
    <% } %>

  </div>
</div>


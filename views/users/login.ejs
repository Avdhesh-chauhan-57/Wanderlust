<% layout("layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-3">
          <h3>Login</h3>
          <form method="POST" action="/login" class="needs-validation"   novalidate>
           <div class="mb-3 mt-3">
              <label for="username"
              class="form-label">Username</label>

              <input name="username"
              id="useranme"
               type="text"
                class="form-control" 
                required>
            </div>

            
            <div class="mb-3">
              <label for="password"
              class="form-label">Password</label>

              <input name="password"
              id="password"
               type="password"
                class="form-control" 
                required>
              <div class="invalid-feedback">Set your unique password</div>
            </div>
           
              <div class="mb-3">
                <button class="btn btn-outline-success">Login</button>
              </div>
            </form>




    </div>
</div>